<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">


        <TextView
            android:id="@+id/csr_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:paddingBottom="20dp"
            android:text="@string/csr_lab"
            android:textColor="@android:color/black"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/desc_image"
            android:layout_width="wrap_content"
            android:layout_height="243dp"
            android:layout_gravity="center"
            android:src="@drawable/wimage" />

        <TextView
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="About Us"
            android:textColor="@android:color/black"

            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingLeft="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Cyber Security Laboratory is committed to ensuring a positive turnaround in Nigeria's approach to technology by accepting technological projects, challenges and competitions, and deploying pace-setting innovations accross a variety of sectors.."
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="CSLab, African Center for Excellence, Obafemi Awolowo University."
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cslab@oauife.edu.ng"
            android:textColor="@android:color/black"
            android:drawableStart="@drawable/ic_mail_outline_black_24dp"
            android:padding="10dp"
            android:drawablePadding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2348 012 345 6789"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@android:color/black"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8am - 4pm"
            android:drawablePadding="10dp"
            android:textColor="@android:color/black"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:padding="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:textColor="@android:color/black"
            android:drawableStart="@drawable/ic_copyright_black_24dp"
            android:text="@string/_2019" />


    </LinearLayout>
</layout>
